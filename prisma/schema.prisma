// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id                    String   @id @default(cuid())
  title                 String
  slug                  String?  @unique // SEO-friendly URL slug (optional, can use id if not set)
  coverImage            String
  description           String   // Short description for listings
  introduction          String?  // Section 2 - longer introduction text (supports markdown)
  introductionHeader    String?  // Custom header for introduction section (e.g., "Meet Your Faithful Goal Journal")
  introductionBodyMd    String?  // Optional markdown body for section 2 (if provided, used instead of introduction)
  amazonLink            String
  painPoints            String[] // "You're Not Alone" section - array of pain points
  painPointsHeader      String?  // Custom header for pain points section (e.g., "You're Not Alone, Teen")
  painPointsBodyMd      String?  // Optional markdown body for section 1 (if provided, used instead of painPoints array)
  benefits              String[] // "How This Book Will Help You" - array of benefits
  benefitsHeader        String?  // Custom header for benefits section (e.g., "How This Workbook Will Help You")
  benefitsBodyMd        String?  // Optional markdown body for section 3 (if provided, used instead of benefits array)
  features              String[] // "What You'll Find Inside" - array of features/content
  featuresHeader        String?  // Custom header for features section (e.g., "What You'll Discover Inside")
  featuresBodyMd        String?  // Optional markdown body for section 4 (if provided, used instead of features array)
  targetAudience        String[] // "This Book Is For You If..." - array of target audiences
  targetAudienceHeader  String?  // Custom header for target audience section
  targetAudienceBodyMd  String?  // Optional markdown body for section 5 (if provided, used instead of targetAudience array)
  faithMessage          String?  // "Faith That Supports" or "Rooted in Faith" section (supports markdown)
  faithMessageHeader    String?  // Custom header for faith message section
  faithMessageBodyMd    String?  // Optional markdown body for section 6 (if provided, used instead of faithMessage)
  featured              Boolean  @default(false)
  order                 Int      @default(0) // For ordering books
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  clicks Click[]
}  

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  text      String
  rating    Int      @default(5) // 1-5 stars
  featured  Boolean  @default(false)
  imageUrl  String? // Optional avatar or photo URL
  createdAt DateTime @default(now())
}

model Author {
  id          String   @id @default(cuid())
  name        String
  bio         String
  photo       String?  // Optional photo URL
  credentials String?  // e.g., "Licensed Guidance Counselor"
  email       String?  // Contact email
  twitter     String?  // Twitter/X profile URL
  facebook    String?  // Facebook profile URL
  instagram   String?  // Instagram profile URL
  linkedin    String?  // LinkedIn profile URL
  amazon      String?  // Amazon author page URL
  pinterest   String?  // Pinterest profile URL (priority from web.pdf)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EmailSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Click {
  id        String   @id @default(cuid())
  bookId    String?
  link      String // Amazon link or other link clicked
  source    String   @default("unknown") // e.g., "hero", "showcase", "sticky"
  createdAt DateTime @default(now())

  book Book? @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@index([bookId])
  @@index([createdAt])
}

model SiteConfig {
  id            String   @id @default(cuid())
  siteTitle     String   @default("Faith-Based Books & Guided Journals")
  siteDescription String @default("Discover faith-based books and guided journals for mental wellness, written by a licensed guidance counselor.")
  shortDescription String? // Optional short tagline used in various places
  metaImageUrl  String?  // Optional Open Graph image URL
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  pagination    Int @default(10)
}
